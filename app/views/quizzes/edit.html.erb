<h1>クイズ編集</h1>
<%= form_with(model: @quiz, local:true) do |f| %>
  <%= f.label :img, '画像' %>
  <%= f.file_field :img, class:"image" %>
    <script type="text/javascript">
    $(function() {
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            $('#img_prev').attr('src', e.target.result);
          }
          reader.readAsDataURL(input.files[0]);
        }
      }
      $("#quiz_img").change(function(){
        readURL(this);
      });
    });
    </script>
    <%= image_tag @quiz.img.url, id: :img_prev if @quiz.img? %>
  <%= f.label :choice1,'選択肢1' %>
  <%= f.text_field :choice1 %>
  <%= f.label :choice1,'選択肢2' %>
  <%= f.text_field :choice2 %>
  <%= f.label :choice1,'選択肢3' %>
  <%= f.text_field :choice3 %>
  <%= f.label :choice1,'選択肢4' %>
  <%= f.text_field :choice4 %>
  <%= f.select :answer, [[1,1],[2,2],[3,3],[4,4]]%>
  <%= f.submit '投稿' %>  
<% end %>
